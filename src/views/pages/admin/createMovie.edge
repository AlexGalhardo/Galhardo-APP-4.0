{{>partials/header}}

	@if(user?.admin)

	<main class="container col-lg-10 mt-3 text-center">

        <div class="row" class="text-end d-flex justify-content-between">

        	<form action="/admin/create/movie" method="POST">

	        	<div class="mb-3 row">

	        		@if(flash_success)
                        <div class="text-center alert alert-success" role="alert">
                            <b>{{flash_success}}</b>
                        </div>
                    @end

                    @if(flash_warning)
                        <div class="text-center alert alert-warning" role="alert">
                            <b>{{flash_warning}}</b>
                        </div>
                    @end

			        <div class="col-lg-6">

			        	<div class="form-floating mb-3">
						  	<input type="number" min="1" class="form-control" name="movie_id" id="movie_id" value="" required onkeydown="return false;">
						  	<label for="movie_id">movie_ID</label>
						</div>

					    <div class="form-floating mb-3">
						  	<input type="text" class="form-control" name="movie_title" id="movie_title" value="" required>
						  	<label for="movie_title">movie_TITLE</label>
						</div>

						<div class="form-floating mb-3">
						  	<input type="number" min="1990" step="1" max="2021" class="form-control" id="movie_year_release" name="movie_year_release" value="{{year_release}}" required>
						  	<label for="movie_year_release">movie_YEAR_RELEASE</label>
						</div>

						<div class="form-floating mb-3">
						  	<input type="text" class="form-control" name="movie_image" id="movie_image" value="" required>
						  	<label for="movie_image">movie_IMAGE_LINK</label>
						</div>

					</div>



					<div class="col-lg-6">
						<div class="form-floating mb-3">
						  	<input type="text" class="form-control" name="movie_genres" id="movie_genres" value="" required>
						  	<label for="movie_genres">movie_GENRES</label>
						</div>

						<div class="form-floating mb-3">
						  	<input type="text" class="form-control" name="movie_author" id="movie_author" value="" required>
						  	<label for="movie_author">MOVIE_DURATION</label>
						</div>

						<div class="form-floating">
						  	<textarea style="height: 300px" class="form-control" name="movie_resume" id="movie_resume" required>{{resume}}</textarea>
						  	<label for="movie_resume">movie_RESUME</label>
						</div>
					</div>

				</div>

				<button type="submit" class="mb-5 w-25 btn btn-outline-primary shadow">
	        		Create Book
	        	</button>

			</form>

        </div>

    </main>

    @end

@end
