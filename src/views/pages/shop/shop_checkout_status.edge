@layout.main({ title: "Checkout Status", user })

	<div class="container col-lg-9 mt-3 mx-auto">

		@if(flash_success)
			<div class="text-center alert alert-success" role="alert">
				<b>{{flash_success}}</b>
			</div>
		@end

		<div class="row">

			<div class="col-lg-4 mb-3">

	            <ul class="list-group text-center">

	                @each(product in shopTransactionObject.products))

		                <li class="list-group-item d-flex justify-content-between align-items-center">

		                    <img class="h-25 w-25" src="{{ product.image }}">

		                    {{ product.title }}

		                    <b>
		                    	$
		                    	<span>
		                    		{{ product.price }}
		                    	</span>
		                   	</b>
		                </li>

	                @end

	                <li class="list-group-item d-flex justify-content-between align-items-center">
	                    Shipping Fee
	                    <b>$ <span>{{ shopTransactionObject.shipping_fee }}</span></b>
	                </li>

	                <li class="list-group-item d-flex justify-content-between align-items-center bg-warning">
	                    <b>TOTAL</b>
	                    <b>$ <span>{{ shopTransactionObject.total_amount }}</span></b>
	                </li>

	            </ul>

	        </div>

			<div class="col-lg-4">
    			<ul class="list-group list-group-flush text-start">
                    <li class="list-group-item"><b>CHARGE_ID:</b> {{ shopTransactionObject.transaction_id }}</li>
                    <li class="list-group-item"><b>CURRENCY:</b> {{ shopTransactionObject.currency }}</li>
                    <li class="list-group-item"><b>AMOUNT:</b> {{ shopTransactionObject.total_amount }}</li>
                    <li class="list-group-item"><b>PAID:</b> {{ shopTransactionObject.paid }}</li>
                    <li class="list-group-item"><b>STRIPE_CARD_ID:</b> {{ shopTransactionObject.card_id }}</li>
                    <li class="list-group-item"><b>CREATED_AT:</b> {{ shopTransactionObject.created_at }}</li>
                </ul>
	        </div>

	        <div class="col-lg-4">
    			<ul class="list-group list-group-flush text-start">
                    <li class="list-group-item"><b>Customer:</b> {{ shopTransactionObject.user_name }}</li>
                    <li class="list-group-item"><b>Phone:</b> {{ shopTransactionObject.user_phone }}</li>
                    <li class="list-group-item"><b>Email:</b> {{ shopTransactionObject.user_email }}</li>
                    <li class="list-group-item"><b>Shipping ZipCode:</b> {{ shopTransactionObject.shipping_address_zipcode }}</li>
                    <li class="list-group-item"><b>Shipping Street:</b> {{ shopTransactionObject.shipping_address_street }}</li>
                    <li class="list-group-item"><b>Shipping Neighborhood:</b> {{ shopTransactionObject.shipping_address_neighborhood }}</li>
                    <li class="list-group-item"><b>Shipping City:</b> {{ shopTransactionObject.shipping_address_city }}</li>
                    <li class="list-group-item"><b>Shipping State:</b> {{ shopTransactionObject.shipping_address_state }}</li>
                    <li class="list-group-item"><b>Shipping Country:</b> {{ shopTransactionObject.shipping_address_country }}</li>
                    <li class="list-group-item"><b>Shipping Carrier:</b> {{ shopTransactionObject.shipping_carrier }}</li>
                </ul>
	        </div>

	    </div>

	</div>

@end
