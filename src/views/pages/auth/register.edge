<html lang="en-US">

<head>

    <title>Register Account</title>

    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">

   <!-- DESCRIPTION -->
    <meta name="description" content="Register Account in Galhardo APP.">.

    <!-- BOOTSTRAP 5 CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- BOOTSTRAP 5 JS -->
    <script src="/scripts/bootstrap.bundle.min.js"></script>

    <!-- BOOTSTRAP 5 ICONS -->
    <link rel="stylesheet" href="/css/bootstrap-icons.css">

    <!-- LOADING PAGE JS -->
    <script src="/scripts/pace.min.js"></script>

    <!-- LOADING PAGE CSS -->
    <link rel="stylesheet" href="/css/minimal.css">

</head>


<body style="background-color: #212529">

    <div class="container col-lg-3 mt-3">

        <h2 class="text-center text-muted mb-4">
            <a class="text-decoration-none" href="/">
                <b class="fw-bold text-white">
                    Galhardo APP
                </b>
            </a>
        </h2>

        @if(flash_success)
            <div class="text-center alert alert-success" role="alert">
                <b>{{flash_success}}</b>
            </div>
        @end

        @if(flash_warning)
            <div class="text-center alert alert-warning" role="alert">
                <b>{{flash_warning}}</b>
            </div>
        @end

        {{{captcha}}}

        <form action="/register" method="POST" id="form_register">

            <input type="text" id="app_url" hidden value="{{app_url}}" readonly>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">

            <small><span id="alert_name" class="fw-bold text-danger"></span></small>

            <div class="form-floating mb-3">
                <input type="text" class="form-control mb-3" id="username" name="username" placeholder="Enter your username" required autofocus value="" minlength="4" maxlength="32">
                <label for="username">Username</label>
            </div>

            <small><span id="alert_email" class="fw-bold text-danger"></span></small>

            <div class="form-floating mb-3">
                <input type="email" class="form-control mb-3" name="email" id="email" required value="">
                <label for="email">Email</label>
            </div>

            <small><span id="alert_password" class="fw-bold text-danger"></span></small>

            <div class="form-floating mb-3">
                <input type="password" class="mb-3 form-control" id="password" name="password" placeholder="Enter your password" minlength="6" required>
                <label for="password">Password</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" class="mb-3 form-control" id="confirm_password" name="confirm_password" placeholder="Confirm your password" minlength="6" required>
                <label for="confirm_password">Confirm Password</label>
            </div>

            <div class="mb-3 form-check">
                <small><span id="alert_checkbox" class="fw-bold text-danger"></span></small>
                <input type="checkbox" class="form-check-input" id="checkbox_policy">
                <label class="form-check-label" for="checkbox_policy">
                    <small class="text-white">
                        By registering your account, you agree with our
                        <a target="_blank" href="/privacy">Privacy and Terms of Use Policy</a> and accept to receive newsletter offers and advertisements.
                    </small>
                </label>
            </div>

            <div class="form-group">
                <button type="submit" class="shadow mb-3 w-100 btn btn-outline-primary fw-bold btn-block login-btn" id="button_register">Register Account</button>
            </div>

        </form>

        <div class="text-center">
            <p class="text-white">Already have a account?
                <a href="/login" class="text-white fw-bold text-decoration-none"><b>Login Now!</b></a>
            </p>
        </div>

    </div>

    <script src="scripts/register.js"></script>

</body>

</html>
